<query id="updateApplicantExtraVars" action="update">
    <tables>
        <table name="recruit_application" />
    </tables>
    <columns>
		<column name="applicant_name" var="applicant_name"/>
		<column name="birth" var="birth"/>
		<column name="age" var="age" filter="number"/>
		<column name="phone_no" var="phone_no"/>
    </columns>
    <conditions>
        <condition operation="equal" column="comment_srl" var="comment_srl" notnull="notnull" filter="number" />
    </conditions>
</query>